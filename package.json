{
  "name": "print-different",
  "author": {
    "name": "Max Krieger",
    "email": "max@a9.io"
  },
  "description": "Slice your pdfs up and spread em around",
  "homepage": "./",
  "version": "0.1.0",
  "private": true,
  "build": {
    "appId": "chat.saga.print",
    "files": [
      "build/**/*",
      "!node_modules"
    ],
    "productName": "Print Different",
    "mac": {
      "target": "zip",
      "icon": "icon.png"
    },
    "linux": {
      "target": "deb",
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "@mapbox/shelf-pack": "^3.2.0",
    "downloadjs": "^1.4.7",
    "pdf-lib": "^1.16.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-pdf": "^5.4.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"BROWSER=none yarn start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "pack": "electron-builder --dir",
    "dist": "react-scripts build && electron-builder -ml --universal"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/downloadjs": "^1.4.2",
    "@types/jest": "^26.0.15",
    "@types/mapbox__shelf-pack": "^3.0.1",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-pdf": "^5.0.7",
    "concurrently": "^6.3.0",
    "electron": "^15.1.2",
    "electron-builder": "^22.13.1",
    "typescript": "^4.1.2",
    "wait-on": "^6.0.0"
  }
}
